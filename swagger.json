{
  "openapi": "3.0.0",
  "info": {
    "title": "Practice API",
    "version": "1.0.0",
    "description": "Simple practice API route"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Returns greeting with name",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "example": "sarah"
          }
        ],
        "responses": {
          "200": {
            "description": "Greeting message",
            "content": {
              "text/plain": {
                "schema": { "type": "string" },
                "example": "Hello, sarah!"
              }
            }
          }
        }
      }
    }
  }
}
